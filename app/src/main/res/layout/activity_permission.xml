<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.PermissionActivity"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림 수집을 위해서는 권한이 필요합니다."
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/noticeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음과 같이 설정해주세요."
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/img_permission1"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/permissionSettingBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/noticeText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:backgroundTint="#1E132E"
            android:textColor="@color/colorWhite"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:text="설정하러 가기"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>